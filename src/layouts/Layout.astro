---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title, description, image } = Astro.props;

const makeTitle = title
  ? title + " | E Informatique"
  : "E Informatique - Développeur Windows & Technicien IT Perpignan";

// Descriptions par défaut selon la page
const defaultDescriptions: Record<string, string> = {
  "": "Développeur Windows (C#/.NET) et technicien IT à Perpignan. Développement d'applications desktop, administration Windows, assistance informatique en présentiel et à distance. Pyrénées-Orientales (66).",
  "About": "Développeur spécialisé en applications Windows (C#, C) et administration système. Technicien informatique freelance basé à Perpignan. Interventions locales et à distance.",
  "Blog": "Articles et conseils sur le développement Windows, C#, administration système et bonnes pratiques informatiques. Partage d'expertise technique.",
  "Contact": "Contactez-moi pour vos projets d'applications Windows ou assistance informatique à Perpignan et environs. Interventions en présentiel ou à distance.",
  "Pricing": "Tarifs pour développement d'applications Windows, administration système et assistance informatique. Services adaptés aux particuliers et entreprises du 66.",
};

const pageDescription = description || defaultDescriptions[title || ""] || "Développeur Windows C#/.NET et technicien IT à Perpignan. Applications sur mesure, administration Windows, assistance en présentiel et à distance.";

const pageImage = image || resolvedImageWithDomain;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000000" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="French" />
    <meta name="author" content="Elian B - Développeur Windows & Technicien IT" />
    <meta name="geo.region" content="FR-66" />
    <meta name="geo.placename" content="Perpignan" />
    <meta name="geo.position" content="42.698334;2.895556" />
    <meta name="ICBM" content="42.698334, 2.895556" />

    <!-- SEO Tags -->
    <SEO
      title={makeTitle}
      description={pageDescription}
      canonical={canonicalURL}
      twitter={{
        creator: "@NetSha8",
        site: "@NetSha8",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: makeTitle,
          image: pageImage,
        },
        image: {
          alt: "E Informatique - Services informatiques professionnels",
          width: 1200,
          height: 630,
          type: "image/png",
        },
        article: {
          publishedTime: new Date().toISOString(),
        },
      }}
    />

    <!-- Schema.org Structured Data - Organization -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "E Informatique",
        "description": "Développeur Windows (C#/.NET) et technicien IT. Développement d'applications desktop, administration Windows, assistance informatique en présentiel et à distance.",
        "url": "https://e-informatique.fr",
        "telephone": "+33XXXXXXXXX",
        "email": "elianb.pro@gmail.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "",
          "addressLocality": "Perpignan",
          "addressRegion": "Occitanie",
          "postalCode": "66000",
          "addressCountry": "FR"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": "42.698334",
          "longitude": "2.895556"
        },
        "areaServed": [
          {
            "@type": "City",
            "name": "Perpignan"
          },
          {
            "@type": "City",
            "name": "Canet-en-Roussillon"
          },
          {
            "@type": "City",
            "name": "Saint-Cyprien"
          },
          {
            "@type": "City",
            "name": "Argelès-sur-Mer"
          },
          {
            "@type": "City",
            "name": "Rivesaltes"
          },
          {
            "@type": "City",
            "name": "Thuir"
          },
          {
            "@type": "City",
            "name": "Ille-sur-Têt"
          },
          {
            "@type": "City",
            "name": "Narbonne"
          },
          {
            "@type": "City",
            "name": "Leucate"
          },
          {
            "@type": "Place",
            "name": "Plaine du Roussillon"
          }
        ],
        "serviceType": [
          "Développement d'applications Windows",
          "Programmation C# et .NET",
          "Programmation système en C",
          "Administration Windows Server",
          "Maintenance Windows",
          "Assistance Windows",
          "Support technique présentiel",
          "Assistance informatique à distance",
          "Automatisation PowerShell",
          "Maintenance informatique"
        ],
        "priceRange": "€€",
        "image": "https://e-informatique.fr/opengraph.jpg",
        "logo": "https://e-informatique.fr/favicon.svg",
        "sameAs": [
          "https://github.com/NetSha8"
        ]
      }
    </script>

    <!-- Additional meta tags for better SEO -->
    <link rel="canonical" href={canonicalURL} />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
